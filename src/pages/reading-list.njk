---
layout: base.njk
title: Läslista
description: Mina böcker från Hardcover
---

<section>
  <h2 class="section-header">Läslista</h2>
  
  {% if readingList.currentlyReading.length > 0 %}
  <div class="reading-section">
    <h3 class="reading-section-title">Läser Nu</h3>
    <div class="books-grid">
      {% for book in readingList.currentlyReading %}
      <div class="book-item">
        <a href="https://hardcover.app/books/{{ book.slug }}" target="_blank" rel="noopener noreferrer" class="book-link">
          {% if book.cover %}
            <img src="{{ book.cover }}" alt="Omslag för {{ book.title }}" class="book-cover">
          {% else %}
            <div class="book-cover-placeholder">{{ book.title }}</div>
          {% endif %}
          <div class="book-info">
            <div class="book-title">{{ book.title }}</div>
            {% if book.authors.length > 0 %}
              <div class="book-author">{{ book.authors | join(', ') }}</div>
            {% endif %}
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}

  {% if readingList.wantToRead.length > 0 %}
  <div class="reading-section">
    <h3 class="reading-section-title">Vill Läsa</h3>
    <div class="books-grid">
      {% for book in readingList.wantToRead %}
      <div class="book-item">
        <a href="https://hardcover.app/books/{{ book.slug }}" target="_blank" rel="noopener noreferrer" class="book-link">
          {% if book.cover %}
            <img src="{{ book.cover }}" alt="Omslag för {{ book.title }}" class="book-cover">
          {% else %}
            <div class="book-cover-placeholder">{{ book.title }}</div>
          {% endif %}
          <div class="book-info">
            <div class="book-title">{{ book.title }}</div>
            {% if book.authors.length > 0 %}
              <div class="book-author">{{ book.authors | join(', ') }}</div>
            {% endif %}
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}

  {% if readingList.read.length > 0 %}
  <div class="reading-section">
    <h3 class="reading-section-title">Lästa</h3>
    <div class="books-list">
      {% for author, authorData in readingList.readGrouped | dictsort %}
      <div class="author-group">
        <h4 class="author-name">{{ author }}</h4>
        
        {# Display series first #}
        {% for seriesName, seriesBooks in authorData.series %}
        <div class="series-group">
          <h5 class="series-name">{{ seriesName }}</h5>
          <ul class="book-list">
            {% for book in seriesBooks %}
            <li class="book-list-item">
              <a href="https://hardcover.app/books/{{ book.slug }}" target="_blank" rel="noopener noreferrer" class="book-list-link">
                {% if book.cover %}
                  <img src="{{ book.cover }}" alt="Omslag för {{ book.title }}" class="book-list-cover">
                {% endif %}
                <span class="book-list-title">{{ book.title }}{% if book.seriesPosition %} (#{{ book.seriesPosition }}){% endif %}</span>
              </a>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endfor %}
        
        {# Display standalone books #}
        {% if authorData.standalone.length > 0 %}
        <ul class="book-list">
          {% for book in authorData.standalone %}
          <li class="book-list-item">
            <a href="https://hardcover.app/books/{{ book.slug }}" target="_blank" rel="noopener noreferrer" class="book-list-link">
              {% if book.cover %}
                <img src="{{ book.cover }}" alt="Omslag för {{ book.title }}" class="book-list-cover">
              {% endif %}
              <span class="book-list-title">{{ book.title }}</span>
            </a>
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}

  {% if readingList.didNotFinish.length > 0 %}
  <div class="reading-section">
    <h3 class="reading-section-title">Lade Ner</h3>
    <div class="books-grid">
      {% for book in readingList.didNotFinish %}
      <div class="book-item">
        <a href="https://hardcover.app/books/{{ book.slug }}" target="_blank" rel="noopener noreferrer" class="book-link">
          {% if book.cover %}
            <img src="{{ book.cover }}" alt="Omslag för {{ book.title }}" class="book-cover">
          {% else %}
            <div class="book-cover-placeholder">{{ book.title }}</div>
          {% endif %}
          <div class="book-info">
            <div class="book-title">{{ book.title }}</div>
            {% if book.authors.length > 0 %}
              <div class="book-author">{{ book.authors | join(', ') }}</div>
            {% endif %}
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}
</section>

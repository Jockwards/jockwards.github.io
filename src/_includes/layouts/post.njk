---
layout: base.njk
---
{% from "components/tmdb-card.njk" import tmdbCard %}

<article class="post-card">
  <div class="post-header-container">
    <h1 class="post-title">{{ title }}</h1>
    {% if tags %}
      <div class="post-tags">
        {% for tag in tags %}
          <a href="/" class="tag-link tag-filter" data-tag="{{ tag }}" style="background-color: {{ tagColors[tag] or '#64748b' }};">{{ tag }}</a>
        {% endfor %}
      </div>
    {% endif %}
  </div>
  <div class="post-date">{{ date.toLocaleDateString('sv-SE') }}</div>

  {% if tmdb_id and tmdb_type %}
    {{ tmdbCard(tmdbData, review_score, 'h2') }}
  {% endif %}

  <div class="post-content">
    {{ content | safe }}
  </div>
</article>

<nav class="post-navigation">
  <a href="/" class="terminal-link">
    <span class="terminal-prompt">$</span> cd ~
  </a>
</nav>

{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": true,
		"experimentalScannerIgnores": ["_site/**", "node_modules/**", "bak_*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
			"rules": {
				"recommended": true,
				"complexity": {
					"noImportantStyles": "off"
				},
				"suspicious": {
					"noUnknownAtRules": "off"
				},
				"markdown": {
					"noBareUrls": "off"
				}
			}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
